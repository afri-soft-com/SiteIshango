    <thead>
        <tr>
            <th>ID</th>
            <th>IMAGE</th>
            <th>DESCRIPTION</th>
            <th>PRIX</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in listeMenu)
        {

            <tr>
                <td>@item.IdMenu</td>
                <td>@item.ImageMenu</td>
                <td>@item.DescriptionMenu</td>
                <td>@item.PrixMenu</td>
            </tr>
        }
    </tbody>
</table>

