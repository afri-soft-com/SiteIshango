@using ClassLibraryIshangoBar.Evenements
@using System.IO
@using Syncfusion.Blazor.PivotView
@using Microsoft.AspNetCore.Hosting;
@inject Microsoft.AspNetCore.Components.NavigationManager UriHelper
@inject IWebHostEnvironment Environment
@inject EvenementDataAccessLayer eventDAL


<section class="next_event_area">
    <div class="container">
        <div class="s_white_red_title">
            <h3>Evenements</h3>
            <h2>Les évenements de la semaine</h2>
        </div>


        @foreach (var item in listeEvenement)
        {
            <div class="myslide_next">


                <div class="item">

                    <div class="col-md-6">
                        <div class="row">
                            <div class="left_event_img">
                                <img src="@item.ImageEvenement" alt=""
                                     style="width:600px; height:400px;">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="right_event_text">
                                <a href="#"><h3>@item.TitreEvenement</h3></a>
                                <p>@item.DescriptionEvenement</p>
                                <div class="event_shedule">
                                    <time datetime="P65DT05H16M22S"></time>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    
                </div>


            </div>
        }
        </div>

</section>



@code {

    EvenementModel eventModel = new EvenementModel();

    IEnumerable<EvenementModel> listeEvenement;

    protected override void OnInitialized()
    {
        listeEvenement = eventDAL.GetLesEvents();
    }
}
