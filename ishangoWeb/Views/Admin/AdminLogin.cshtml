<div class="container bg-login">
    <div class="row" style="padding-bottom:20px;">
        <div class="col-md-4 col-sm-4 col-xs-12"></div>

        <div class="col-md-4 col-sm-4 col-xs-12">
            <form class="form-container">
                <h1 class="white_" style="text-align:center;">Login</h1>
                <div class="form-group">
                    <label for="exampleInputEmail1" class="white_">Nom d'utilisateur</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Nom d'utilisateur">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" class="white_">Mot de passe</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Mot de passe">
                </div>
                <button type="submit" class="btn btn-success btn-block" style="background-color:#b10400;"
                        asp-area="" asp-controller="Admin" asp-action="AjouterMenu">
                    Connection
                </button>
            </form>
        </div>
        <div class="col-md-4 col-sm-4-col-xs-12"></div>
    </div>
</div>

